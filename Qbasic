Q.no : 2 

DECLARE SUB sum (a,b,c)
CLS
CALL SUM ( a,b,c) 
END 

SUB sum (a,b,c)
INPUT "Enter the first number" ; a 
INPUT "Enter the second number" ; b
INPUT "Enter The thrid number" ; c 
s = a + b + c 
PRINT "THe sum of the number is" ; s 
END SUB


Q.no : 3 

DECLARE SUB CONVERT (F)
CLS
INPUT “ENTER TEMPERATURE IN FARENHEIT”; F
CALL CONVERT (F)
END

SUB CONVERT (F)
C = (F – 32) * (5 / 9)
PRINT “TEMPERATURE IN CELCIUS=”; C
END SUB


Q.no : 4 

DECLARE DUB INTREST (P,T,R) 
CLS 
INPUT "Enter Principal" ; P
INPUT "Enter Rate" ; R
INPUT "Enter Time"; T
CALL INTREST (P,T,R)
END 

SUB INTREST (P,T,R)
I = P * T * R / 100 
PRINT " Simple Intrest =" ; I 
END

Q.no 5 

DECLARE SUB AREA (R)
CLS
INPUT “ENTER RADIUS”; R
CALL AREA(R)
END

SUB AREA (R)
A = 3.14 * R ^ 2
PRINT “AREA OF CIRCLE ”; A
END SUB

Q.no 6 

DECLARE SUB PERIMETER (L, B)
CLS
INPUT “ENTER LENGTH”; L
INPUT “ENTER BREADTH”; B
CALL PERIMETER(L, B)
END

SUB PERIMETER (L, B)
P = 2 * (L + B)
PRINT “PERIMETER OF RECTANGLE ”; P
END SUB

Q.no 7 

DECLARE SUB TSAREA (R)
CLS
INPUT “ENTER RADIUS”; R
CALL TSAREA(R)
END

SUB TSAREA (R)
A= 4 * 3.14 * R ^ 2
PRINT “TOTAL SURFACE AREA OF SPHERE “; A
END SUB
